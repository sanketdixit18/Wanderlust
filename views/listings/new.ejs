<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <div class="form-container">
      <h1 class="mb-4 text-center text-primary">Create a New Listing</h1>
      
      <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3 form-floating">
          <input 
            type="text" 
            name="title" 
            id="title" 
            class="form-control" 
            placeholder="Title" 
            required
            pattern=".{3,}"
            title="Title must be at least 3 characters long."
          >
          <label for="title">Title</label>
          <div class="invalid-feedback">
            Please provide a valid title (at least 3 characters).
          </div>
        </div>

        <div class="mb-3 form-floating">
          <textarea 
            name="description" 
            id="description" 
            class="form-control" 
            placeholder="Description" 
            required 
            style="height: 100px"
            pattern=".{20,}"
            title="Description must be at least 20 characters long."
          ></textarea>
          <label for="description">Description</label>
          <div class="invalid-feedback">
            Please enter a detailed description (at least 20 characters).
          </div>
        </div>
        
        <div class="mb-4 p-3 border rounded image-options-card">
            <h5 class="mb-3 text-secondary">Listing Image</h5>
            <p class="small text-muted mb-3">
                Choose **EITHER** a file upload **OR** paste an image URL.
            </p>

            <div class="mb-4">
                <label for="imageUpload" class="form-label fw-bold">1. Upload Image File:</label>
                <input 
                  type="file" 
                  name="image" 
                  id="imageUpload" 
                  class="form-control" 
                  accept="image/*"
                >
                </div>

            <hr>

            <div class="mb-2">
                <label for="imageUrl" class="form-label fw-bold">2. Or Paste Image URL:</label>
                <input 
                  type="text" 
                  name="imageURL" 
                  id="imageUrl" 
                  class="form-control" 
                  placeholder="e.g., https://example.com/listing.jpg"
                  pattern="(https?:\/\/.*\.(?:png|gif|webp|jpeg|jpg))" 
                  title="Please enter a valid image URL (e.g., must end with .jpg, .png, etc.)."
                >
                </div>
        </div>
        
        <div class="row">
          
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input 
                type="number" 
                name="price" 
                id="price" 
                class="form-control" 
                placeholder="Price" 
                required 
                min="1" 
                step="0.01"
                title="Price must be a positive number."
              >
              <label for="price">Price (₹)</label>
              <div class="invalid-feedback">
                Price must be a positive number (minimum ₹1).
              </div>
            </div>
          </div>
          
          <div class="col-md-6 mb-3">
            <div class="form-floating">
              <input 
                type="text" 
                name="location" 
                id="location" 
                class="form-control" 
                placeholder="Location" 
                required
                pattern="[A-Za-z].*(?![Nn][Oo]$)" 
              >
              <label for="location">Location</label>
              <div class="invalid-feedback">
                Please provide a valid location.
              </div>
            </div>
          </div>
          
        </div>

        <div class="mb-4 form-floating">
          <input 
            type="text" 
            name="country" 
            id="country" 
            class="form-control" 
            placeholder="Country" 
            required
            pattern="[A-Za-z].*(?![Nn][Oo]$)" 
          >
          <label for="country">Country</label>
          <div class="invalid-feedback">
            Please provide a valid country.
          </div>
        </div>

        <button type="submit" class="btn btn-primary w-100 py-2">Create Listing</button>
      </form>

      <hr class="mt-4">
      
      <div class="text-center">
        <a href="/listings" class="btn btn-outline-secondary">⬅ Back to All Listings</a>
      </div>

    </div>
  </div>
</div>

