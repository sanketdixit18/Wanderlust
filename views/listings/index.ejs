


<% layout('layouts/boilerplate') %>

<h3 class="mb-4">All Listings</h3>

<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
  <% for (let listing of allListings) { %>
    <div class="col">
      <!-- Make the whole card clickable -->
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card h-100 shadow-sm position-relative" style="border-radius: 25px; overflow: hidden;">
          
          <!-- Guest favourite badge -->
          <!-- <span class="position-absolute top-0 start-0 m-2 badge bg-light text-dark">Guest favourite</span> -->
           <!-- Interactive Heart Icon Container (The Circle) -->
          <div class="favorite-toggle" 
            data-listing-id="<%= listing._id %>" 
            onclick="toggleFavorite(this, event)">
              <!-- The Icon itself -->
              <i class="bi bi-heart favorite-icon"></i>
          </div>
          
          <!-- Listing image -->
          <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" style="height: 200px; object-fit: cover;">

          <div class="card-body">
            <h6 class="card-title"><%= listing.title %></h6>
            <p class="card-text mb-1">
              ₹<%= listing.price %> for 3 nights
            </p>
            <p class="text-muted mb-2">
              ★ 4.8
            </p>
            <!-- View Listing button -->
            <button class="btn btn-primary btn-sm">View Listing</button>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>


 