<% layout('layouts/boilerplate') %>

<!-- Custom Styles and Animations -->
<style>
  /* Global Styles */
  body { 
    background: #ffffff; /* Pure white background */
    font-family: 'Inter', sans-serif; 
    padding-top: 20px;
  }
  
  /* Main Container - Tighter and Centered */
  .listing-container {
    max-width: 900px; /* Constrain width for better focus */
    margin: 40px auto;
    padding: 0 15px;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeIn 0.7s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  @keyframes fadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Image Styling - Focus on quality, not size */
  .single-listing-image {
    width: 100%;
    height: 350px; /* Balanced height for desktop view */
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 2.5rem;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }
  
  /* Section Separator */
  .section { 
    padding: 2.5rem 0; 
    border-bottom: 1px solid #eeeeee; 
  }
  .section:last-of-type {
    border-bottom: none;
    padding-bottom: 0;
  }
  
  /* Detail Styles */
  .rating { 
    color: #ff385c; 
    font-weight: 700; 
  }
  .bi {
    margin-right: 10px;
    font-size: 1.1rem;
  }

  /* Sticky Price/Action Box */
  .price-box { 
    border: 1px solid #ddd; 
    border-radius: 12px; 
    padding: 24px; 
    position: sticky; 
    top: 100px; 
    background: #fff; 
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  /* Button Styles */
  .btn-action {
    transition: all 0.2s ease-in-out;
    border-radius: 8px;
    font-weight: 600;
  }

  /* Confirmation Modal Styles */
  .confirm-message {
    position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%);
    background: white; padding: 30px; border-radius: 10px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); z-index: 1050;
    text-align: center; visibility: hidden; opacity: 0;
    transition: opacity 0.3s, visibility 0.3s;
  }
  .confirm-message.show { visibility: visible; opacity: 1; }

  .overlay {
    position: fixed; top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0, 0, 0, 0.6); z-index: 1040;
    visibility: hidden; opacity: 0;
    transition: opacity 0.3s, visibility 0.3s;
  }
  .overlay.show { visibility: visible; opacity: 1; }
</style>

<div class="container listing-container">

  <!-- Image (Single, Balanced, and Centered) -->
  <% 
    const mainImageUrl = listing.image && listing.image.url ? listing.image.url : 
                         'https://placehold.co/900x350/F0F8FF/007bff?text=Listing+Image';
  %>
  <img src="<%= mainImageUrl %>" 
       class="single-listing-image" 
       alt="<%= listing.title %>" 
       onerror="this.onerror=null;this.src='https://placehold.co/900x350/E6E6FA/007bff?text=Image+Load+Failed';">


  <!-- Title & Primary Info -->
  <h1 class="fw-bold mb-2"><%= listing.title %></h1>
  <p class="text-muted fs-6 mb-1">
    <i class="bi bi-geo-alt-fill text-danger"></i> <%= listing.location %>, <%= listing.country %>
  </p>
  <p class="rating pb-4 border-bottom">★ 5.0 · 20 reviews (Mock)</p>


  <div class="row mt-4">
    <!-- LEFT COLUMN (Main Content) -->
    <div class="col-lg-7">
      
      <!-- Host Info (Moved near the top of the content) -->
      <div class="section pt-0 d-flex align-items-center">
        <img src="https://placehold.co/60x60/6c757d/ffffff?text=H" class="rounded-circle me-3" alt="Host Avatar">
        <div>
          <h5 class="fw-bold mb-0">
            Hosted by <%= listing.author ? listing.author.username : "Unknown Host" %> 
            (<%= listing.author ? listing.author.email : "No email" %>)
          </h5>
          <p class="text-muted mb-0">Superhost · <%= avgRating %> rating</p>

          <!-- <h5 class="fw-bold mb-0">Hosted by <%= listing.author ? listing.author.username : "Unknown Host" %></h5>
          <p class="text-muted mb-0">Superhost · <%= avgRating %> rating</p> -->


        </div>
      </div>
      
      <!-- Description -->
      <div class="section">
        <h4 class="fw-semibold mb-3">About this place</h4>
        <p class="text-muted"><%= listing.description %></p>
      </div>

      <!-- Amenities (Mock Data) -->
      <div class="section">
        <h4 class="fw-semibold mb-3">What this place offers</h4>
        <div class="row text-muted fs-6">
          <div class="col-md-6 mb-2"><i class="bi bi-wifi text-primary"></i> Free Wifi</div>
          <div class="col-md-6 mb-2"><i class="bi bi-car-front text-success"></i> Free parking</div>
          <div class="col-md-6 mb-2"><i class="bi bi-tv text-secondary"></i> Cable TV</div>
          <div class="col-md-6 mb-2"><i class="bi bi-house-door text-info"></i> Private entrance</div>
        </div>
      </div>

      <!-- Map -->
      <div class="section">
        <h4 class="fw-semibold mb-3">Where you’ll be</h4>
        <p class="text-muted"><%= listing.location %>, <%= listing.country %></p>
        <div class="map-container" style="height: 300px; border-radius: 8px; overflow: hidden;">
          <iframe width="100%" height="100%" frameborder="0" style="border:0"
            src="https://www.google.com/maps?q=<%= listing.location %>&output=embed" allowfullscreen loading="lazy">
          </iframe>
          <div id="map" style="height: 300px; border-radius: 8px; overflow: hidden;"></div>
          
        </div>
      </div>
    <!-- Reviews Section -->
<div class="section mt-5">
  <h4 class="fw-semibold mb-3">Reviews</h4>

  <!-- Display Reviews -->
  <% if (listing.reviews.length === 0) { %>
    <p class="text-muted">No reviews yet. Be the first to review this place!</p>
  <% } else { %>
    <div class="row g-3">
      <% listing.reviews.forEach(review => { %>
        <div class="col-md-6">
          <div class="card shadow-sm h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center mb-2">
                <h6 class="fw-bold mb-0">Anonymous</h6>
                <div class="d-flex align-items-center">
                  <span class="text-warning me-2">
                    <% for(let i = 0; i < review.rating; i++) { %>★<% } %>
                    <% for(let i = review.rating; i < 5; i++) { %>☆<% } %>
                  </span>
                  <!-- Delete button inside loop -->
                  <!-- <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger ms-2">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form> -->
                  <% if (currentUser && review.author && review.author._id.equals(currentUser._id)) { %>
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-outline-danger ms-2">
                      <i class="bi bi-trash"></i> Delete
                    </button>
                  </form>
                <% } %>

                </div>
              </div>

              <p class="card-text text-muted mb-1"><%= review.reviewText %></p>
              <small class="text-secondary">
                <%= new Date(review.createdAt).toLocaleDateString() %>
              </small>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>

  <!-- Add Review Form -->
  <div class="mt-4 border-top pt-4">
    <h5 class="fw-semibold mb-3">Write a Review</h5>
    <form action="/listings/<%= listing._id %>/reviews" method="POST">
      <div class="mb-3">
        <textarea name="reviewText" class="form-control" rows="3" placeholder="Share your experience..." required></textarea>
      </div>

      <div class="mb-3">
        <label for="rating" class="form-label fw-semibold">Rating</label>
        <select id="rating" name="rating" class="form-select" required>
          <option value="" disabled selected>Choose rating</option>
          <option value="5">★★★★★ (5 - Excellent)</option>
          <option value="4">★★★★☆ (4 - Good)</option>
          <option value="3">★★★☆☆ (3 - Average)</option>
          <option value="2">★★☆☆☆ (2 - Poor)</option>
          <option value="1">★☆☆☆☆ (1 - Terrible)</option>
        </select>
      </div>

      <button type="submit" class="btn btn-primary">Submit Review</button>
    </form>
  </div>
</div>





      
      <!-- Back Link at the very bottom -->
      <div class="pt-4 border-top">
          <a href="/listings" class="text-secondary fw-bold text-decoration-none">
            <i class="bi bi-arrow-left me-2"></i> Back to All Listings
          </a>
      </div>
      
    </div>

    <!-- RIGHT COLUMN (Sticky Price and Action Box) -->
    <div class="col-lg-5">
      <div class="price-box">
        <h2 class="mb-3">
            <!-- <span class="fw-bold">₹ <%= listing.price.toLocaleString("en-IN") %></span>  -->
             <span class="fw-bold">
                ₹ <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>
              </span>

            <small class="text-muted">/ night</small>
        </h2>
        
        <!-- Mock Booking/Reserve Button -->
        <a href="/listings/<%= listing._id %>/book" class="btn btn-danger btn-action w-100 mt-3">
          Reserve
        </a>

        
        <hr class="my-4">

        <!-- Management Buttons -->
        <% if (currentUser && listing.author && listing.author._id.equals(currentUser._id)) { %>
          <p class="fw-semibold text-center mb-2 text-secondary">Manage this Listing</p>
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-action w-100 mt-2">
            <i class="bi bi-pencil-square me-2"></i> Edit Listing
          </a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="mt-2">
            <button type="submit" class="btn btn-outline-danger btn-action w-100">
              <i class="bi bi-trash me-2"></i> Delete Listing
            </button>
          </form>
        <% } %>


      </div>
    </div>
  </div>
</div>

<!-- Custom Confirmation UI (Replaces window.confirm) -->
<div class="overlay" id="deleteOverlay"></div>
<div class="confirm-message" id="deleteConfirm">
    <h5 class="mb-4">Are you sure you want to delete this listing?</h5>
    <div class="d-flex justify-content-around">
        <!-- <button class="btn btn-secondary btn-action me-3" onclick="hideConfirm()">Cancel</button> -->
         <button type="button" class="btn btn-secondary btn-action me-3">Cancel</button>

        <!-- The form submission is now triggered by this button -->
        <form id="deleteForm" action="/listings/<%= listing._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-danger btn-action">Confirm Delete</button>
        </form>
    </div>
</div>

<script>
  const lat = <%= listing.latitude || 28.6139 %>;
  const lng = <%= listing.longitude || 77.2090 %>;

  const map = L.map('map').setView([lat, lng], 13);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    maxZoom: 19,
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);

  const marker = L.marker([lat, lng]).addTo(map);
  marker.bindPopup("<b><%= listing.title %></b><br><%= listing.location %>").openPopup();
</script>

